${parts['buildout'].directory}/var/log/*.log {
    rotate ${parts['buildout']['rotate']}
    weekly
    create
    compress
    delaycompress
    sharedscripts
    postrotate
        [ ! -f /var/run/nginx.pid ] || kill -USR1 `cat /var/run/nginx.pid`
        [ ! -f /var/run/supervisord.pid ] || kill -USR2 `cat /var/run/supervisord.pid`
        for pidfile in /var/run/gunicorn-*.pid; do kill -USR1 `cat $$pidfile`; done
    endscript
}
